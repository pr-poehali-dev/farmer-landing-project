{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "GET current subscription without auth",
      "method": "GET",
      "path": "/",
      "expectedStatus": 401,
      "expectedBody": {
        "error": "User ID required"
      }
    },
    {
      "name": "GET current subscription with auth",
      "method": "GET",
      "path": "/",
      "headers": {
        "X-User-Id": "1"
      },
      "expectedStatus": 200
    },
    {
      "name": "POST create free subscription",
      "method": "POST",
      "path": "/",
      "headers": {
        "X-User-Id": "11",
        "Content-Type": "application/json"
      },
      "body": {
        "action": "create_payment",
        "tier": "free"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    }
  ]
}