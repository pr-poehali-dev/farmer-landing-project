{
  "tests": [
    {
      "name": "Создание оффера (создать предложение с долями)",
      "method": "POST",
      "headers": {
        "X-User-Id": "11"
      },
      "body": {
        "action": "create_offer",
        "farm_name": "Ферма Краснопеева",
        "title": "Корова на мясо №2",
        "description": "Предлагаю инвестировать в корову для получения мяса",
        "asset": {
          "type": "animal",
          "name": "Корова",
          "count": 1
        },
        "total_amount": 150000,
        "share_price": 5000,
        "min_shares": 1,
        "expected_monthly_income": 12000,
        "region": "Московская область",
        "city": "Подольск",
        "socials": {
          "vk": "https://vk.com",
          "tg": "https://t.me"
        },
        "publish": true
      },
      "expectedStatus": 200,
      "expectedBody": {
        "id": "number",
        "farm_name": "Ферма Краснопеева",
        "total_shares": 30,
        "available_shares": 30,
        "status": "published"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Валидация долей (сумма не делится на целое число)",
      "method": "POST",
      "headers": {
        "X-User-Id": "11"
      },
      "body": {
        "action": "create_offer",
        "farm_name": "Ферма Тест",
        "title": "Тест",
        "description": "Тест",
        "total_amount": 150001,
        "share_price": 5000,
        "publish": true
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Получение списка моих офферов",
      "method": "GET",
      "path": "/?action=get_offers",
      "headers": {
        "X-User-Id": "11"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "offers": "array"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Получение баланса фермера",
      "method": "GET",
      "path": "/?action=get_balance",
      "headers": {
        "X-User-Id": "11"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "balance": "number"
      },
      "bodyMatcher": "partial"
    }
  ]
}